<header class="sheet-header">
  <img
    class="profile-img"
    src="{{actor.img}}"
    data-action="editImage"
    data-field="img"
    alt="Portrait"
    height="100"
    width="100"
  />
  <div class="header-fields">
    <h1 class="charname">
      <input
        name="name"
        type="text"
        value="{{actor.name}}"
        placeholder="Name"
      />
    </h1>
  </div>
</header>