  "version": "0.1.0",
  "compatibility": {
    "minimum": 12,
    "verified": 13
  },

  "url": "https://github.com/NekohimeMusou/ffle-sheet-fvtt",

  "authors": [
    {
      "name": "Nekohime Musou",
      "url": "https://github.com/NekohimeMusou",
      "discord": "nekohime.musou"
    }
